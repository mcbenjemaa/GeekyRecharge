<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:orientation="vertical" android:layout_width="match_parent"

      android:minHeight="1200px"
      android:layout_marginLeft="-140px"
      android:layout_height="match_parent">




      <ImageView

        android:id="@+id/body_opened"
        android:layout_width="1120px"
        android:background="@drawable/body_opened"
        android:minHeight="1300px"
        android:visibility="invisible"
        android:translationX="1px"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="-20dp"
        android:layout_alignTop="@+id/body_right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:shadowColor="#fefefe"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8" />

      <ImageView
    android:id="@+id/body_left"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    android:layout_width="610px"
    android:background="@drawable/body_left"
    android:minHeight="1300px"
    android:layout_height="wrap_content"
        android:shadowColor="#fefefe"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:layout_marginTop="54dp"
        android:layout_alignTop="@+id/head_beard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

      <ImageView

        android:id="@+id/body_right"
        android:layout_width="780px"
        android:background="@drawable/body_right"
        android:minHeight="1300px"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/body_left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:shadowColor="#fefefe"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"/>

      <ImageView
        android:id="@+id/head_beard"
        android:layout_width="610px"
        android:background="@drawable/head_beard"
        android:shadowColor="#fefefe"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:layout_height="540px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

      <ImageView
        android:id="@+id/head"
        android:layout_width="610px"
        android:background="@drawable/head"
        android:shadowColor="#fefefe"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:layout_height="540px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
